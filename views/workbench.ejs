<% layout("layout/boilerplate")%>

<div class="card-container  row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-1">
  <%for(let tool of toolArr){%>
    <div class="card m-4" style="width: 18rem;">
        
        <div class="card-body">
          <h5 class="card-title">Name: <%=tool.name%></h5>
          <p class="card-text">Use Cases: <%=tool.uses%></p>
        </div>
        <div class="card-text">Amount to make Tool: <%=tool.price%></div>
        <ul class="list-group list-group-flush">
          <p class="card-text mt-1 mb-1"><b>Resources required:</b> </p>
          <li class="list-group-item"><%=tool.resource[0]%></li>
          <li class="list-group-item"><%=tool.resource[1]%></li>
          <li class="list-group-item"><%=tool.resource[2]%></li>
        </ul>
        <div class="card-body">
          <a href="#" class="card-link">See Details</a>
          <a href="#" class="card-link">Make Tool</a>
        </div>
      </div>
      <%}%>
    
</div>
<form action="/workbench/new" method="GET">
    <button class="btn btn-outline-danger">New Tool</button>
</form>