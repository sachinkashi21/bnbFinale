<% layout("layout/boilerplate")%>

<h4 class="mt-3" style="text-align: center;">My Farm</h4>

<div class="card-container  row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-1">

  

  <%for(let seed of sortedSeeds){%>
  <div class="card m-3" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">Name: <%=seed.name%></h5>
      <h6 class="card-subtitle mb-2 text-body-secondary">variety: <%=seed.variety%></h6>
      <h6 class="card-subtitle mb-2 text-body-secondary">quantity: <%=seed.quantity%>,</h6>
      <h6 class="card-subtitle mb-2 text-body-secondary">Price: <%=seed.price%>,</h6>
      <p class="card-text">specility:<%=seed.note%></p>
      <p class="card-text">Puchase Date: <%=seed.createdAt.toString()%></p>
      <p class="card-text">expiry Date: 2024-01-15</p>
      <a href="#" class="btn btn-success">Explore</a>
      
    </div>
  </div>
  <%}%>
  <form action="/farm/new" class="d-flex mx-auto">
    <button class="btn btn-outline-success btn-lg d-flex mx-auto m-3" style="height: 3rem;">New Seed</button>
  </form>
  
</div>